{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist/cjs",
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*.ts"]
}
